<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idparentlayout"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/idpdf"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/pdf" />

    <LinearLayout
            android:id="@+id/idlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/idpdf"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
    <TextView
            android:id="@+id/idpdfname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:text="@string/app_name"
            android:textColor="#000" />

        <TextView
                android:id="@+id/idpdfnamedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:text="@string/app_name"
                android:textColor="#6A6A6A" />
    </LinearLayout>
    <ImageView
            android:id="@+id/idsharefile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/iddeletefile"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_share_black_24dp" />
    <ImageView
            android:id="@+id/iddeletefile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
       android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_delete_black_24dp" />
</RelativeLayout>